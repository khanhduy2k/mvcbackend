<div class="main__admin_action">
<div class="container bg-light  pt-4 mt-3">
    <div class="col-sm-8 m-auto">
        <h2 class="text-danger">Thêm khóa học</h2>
        <form class="mt-4"  method="POST">
            <div class="form-group">
                <label for="nanameCourseme"><h5>Tên khóa học</h5></label>
                <input type="text" id="nanameCourseme" class="form-control" name="nameCourse" value="{{courses.nameCourse}}">
            </div>
            <div class="form-group">
                <label for="priceCourse"><h5>Giá khóa học</h5></label>
                <input type="text" id="priceCourse" class="form-control" name="priceCourse" value="{{courses.priceCourse}}">
            </div>
            <div class="form-group">
                <label for="classify"><h5>Phân loại</h5></label>
                <select class="form-control" name="classify">
                    <option value="{{courses.classify}}">{{courses.classify}}</option>
                    <option value="Frontend">Frontend</option>
                    <option value="Backend">Backend</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description"><h5>Mô tả</h5></label>
                <textarea class="form-control" id="description" style="height: 150px;resize:none" name="description" >{{courses.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="img"><h5>Link ảnh</h5></label>
                <input type="text" id="img" class="form-control" name="img" value="{{courses.img}}">
            </div>
            <div class="form-group text-right">
                <a class="btn btn-secondary mb-4 text-light" href="/admin" style="float: left;">Về trang quản lí</a>
                <button class="btn btn-primary mb-4">Lưu khóa học</button>
            </div>
        </form>
    </div>
</div>
</div>
